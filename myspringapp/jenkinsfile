pipeline {
    agent any

    environment {
        PROJECT_DIR = "myspringapp"
    }

    stages {

        stage('Clone Repo') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:Divyashree-LB/my_projects.git'
            }
        }

        stage('Build') {
            steps {
                dir("${PROJECT_DIR}") {     // enter into myspringapp/
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Run App') {
            steps {
                dir("${PROJECT_DIR}") {

                    script {
                        // find jar automatically
                        JAR = sh(
                            script: "ls target/*.jar | head -1",
                            returnStdout: true
                        ).trim()
                    }

                    // stop old app
                    sh "pkill -f ${JAR} || true"

                    // run new app
                    sh "nohup java -jar ${JAR} --server.port=9090 > app.log 2>&1 &"
                }
            }
        }
    }

    post {
        success {
            echo "Spring Boot app deployed successfully on port 9090!"
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
