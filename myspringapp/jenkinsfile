pipeline {
    agent any

    environment {
        PROJECT_DIR = "myspringapp"
        DOCKER_IMAGE = "divyashree/myspringapp:latest"
        ARGOCD_SERVER = "13.203.196.249:30007"   // your ArgoCD NodePort
        ARGOCD_USER = "admin"
        ARGOCD_PASS = "F0vwRDRgjsUFk-HD"         // store as secret in real setup
    }

    stages {

        stage('Clone Repo') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:Divyashree-LB/my_projects.git'
            }
        }

        stage('Build') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                    echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                    docker push ${DOCKER_IMAGE}
                """
            }
        }

        stage('Deploy via ArgoCD') {
            steps {
                sh """
                    argocd login ${ARGOCD_SERVER} --username ${ARGOCD_USER} --password ${ARGOCD_PASS} --insecure
                    argocd app sync myspringapp
                """
            }
        }
    }

    post {
        success {
            echo "Spring Boot app deployed successfully via ArgoCD!"
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}

